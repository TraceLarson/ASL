{% extends 'base.njk' %}

{% block title %}Create Note{% endblock %}


{% block body %}
    <div class="container">
        {% if errors %}
            <ul class="list-group">
                <li class="list-group-item">ERRORS <span class="badge badge-danger badge-pill">{{ errors | length }}</span></li>
                {% for error in errors %}
                    <li class="list-group-item list-group-item-danger">{{ error.msg }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        <form action="/Create/add" method="POST">
            {#Title Input#}
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title"
                       placeholder="Title">
            </div>
            {#Date Input#}
            <div class="form-group">
                <label for="Date">Date</label>
                <input type="date" class="form-control" name="date" id="date">
            </div>
            {#Summary Input#}
            <div class="form-group">
                <label for="summary">Summary</label>
                <input type="text" class="form-control" id="summary" name="summary" placeholder="Summarize your note.">
            </div>
            {#Full Text#}
            <div class="form-group">
                <label for="fulltext">Content</label>
                <textarea class="form-control" id="fulltext" name="fulltext" placeholder="Your note.."></textarea>
            </div>
            {#Submit Button#}
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{% endblock %}
