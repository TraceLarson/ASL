{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>
    {% if user  %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user._id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ user.admin }}</td>
            </tr>
            <tr>
                <th>DOB</th>
                <td>{{ user.dob }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ user.website }}</td>
            </tr>
            <tr>
              <th><br /><br /></th>
              <td>
                <a href="{{ path('user_edit', { 'username': user.username }) }}">Edit</a> &nbsp;
                <a href="{{ path('user_delete', { 'username': user.username }) }}">Delete</a>
                </ul>
              </td>
            </tr>
        </tbody>
    </table>
    {% else %}
    <p>No User Found</p>
    {% endif %}

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}